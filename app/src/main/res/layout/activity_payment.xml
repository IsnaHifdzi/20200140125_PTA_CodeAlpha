<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Payment">

    <TextView
        android:id="@+id/textTitle"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome To Mobile Legends"
        android:textColor="@color/purple_700"
        android:textSize="31dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_marginTop="9dp"
        android:weightSum="5"
        android:layout_marginLeft="188dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:layout_marginRight="9dp"
            android:id="@+id/btnDelete"
            android:layout_width="99dp"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="9dp"
            android:textColor="@color/purple_700"
            android:width="1dp"
            android:text="Delete" />
        <Button
            android:width="1dp"
            android:id="@+id/btnbeli"
            android:layout_marginTop="9dp"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:layout_gravity="right"/>

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Masukan Usergame : "
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/nama"
            android:gravity="center"
            android:layout_marginLeft="160dp"
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:layout_height="wrap_content"
            android:hint="Username game "/>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Masukan ID Game : "
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/idgame"
            android:gravity="center"
            android:layout_marginLeft="160dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:hint="ID Game "/>
    </androidx.cardview.widget.CardView>







    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Masukan Jumplah Diamond : "
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/jumlah"
            android:gravity="center"
            android:inputType="text"
            android:layout_marginLeft="234dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Jumplah "/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Vitur Pembayaran : "
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/metodebayar"
            android:gravity="center"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:hint="OVO/DANA" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi Harga :"
        android:textStyle="bold"
        android:textSize="16dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <GridLayout
                android:layout_marginTop="11dp"
                android:columnCount="2"
                android:rowCount="3"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/diamond"/>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:text="408 Diamonds"

                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:text="Rp. 158.175"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/diamond"/>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:text="195 Diamonds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:text="Rp. 48.507"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>
            <GridLayout
                android:layout_marginTop="11dp"
                android:columnCount="2"
                android:rowCount="3"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/diamond"/>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:text="412 Bonus"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:text="Rp. 230.000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/diamond"/>

                        <TextView
                            android:layout_marginTop="12dp"
                            android:text="1209 Bonus"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:text="Rp. 1.230.000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>
            <GridLayout
                android:layout_marginTop="11dp"
                android:columnCount="2"
                android:rowCount="3"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/diamond"/>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:text="2209 Diamonds"

                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="12dp"
                            android:text="Rp. 2.230.000"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="196dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16sp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/diamond" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="3209 Diamonds"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Rp. 3.230.000"
                            android:textColor="@color/black"
                            android:textSize="20dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
